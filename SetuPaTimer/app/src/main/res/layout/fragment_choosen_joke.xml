<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/border_empty_yellow"
  android:padding="@dimen/choosen_joke_main_padding"
  tools:context=".FragmentChoosenJoke">
  
  <TextView
    android:id="@+id/joke_set_up"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal|center_vertical"
    android:textAlignment="center"
    android:textColor="@color/yellow"
    android:textSize="@dimen/h3"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />
  
  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="bottom|end"
    >
    
    <ImageButton
      android:id="@+id/make_favorite"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/ic_favorite_false"
      android:background="@null"
      android:padding="@dimen/joke_react_padding"
      />
    
    <ImageButton
      android:id="@+id/send_punchline"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/ic_send_punchline"
      android:background="@null"
      android:padding="@dimen/joke_react_padding"
      />
  </LinearLayout>


</FrameLayout>