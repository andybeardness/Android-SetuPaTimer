<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/border_empty_purple"
  tools:context=".FragmentInfo">
  
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center">
    
    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textColor="@color/white"
      android:text="@string/info_text_0"
      android:gravity="center"
      />
  
    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textColor="@color/white"
      android:text="@string/info_text_1"
      android:gravity="center"
      />
  
    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textColor="@color/white"
      android:text="@string/info_text_2"
      android:gravity="center"
      />
  
    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textColor="@color/white"
      android:text="@string/info_text_3"
      android:gravity="center"
      />
  
    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textColor="@color/white"
      android:text="@string/info_text_4"
      android:gravity="center"
      />
  
    <ImageButton
      android:layout_width="@dimen/info_image_size"
      android:layout_height="@dimen/info_image_size"
      android:scaleType="centerCrop"
      android:layout_gravity="center"
      android:background="@null"
      android:tint="@color/green"
      android:src="@drawable/info_github" />
  
    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textColor="@color/white"
      android:text="@string/info_text_5"
      android:gravity="center"
      />
  
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:orientation="horizontal">
    
      <ImageButton
        android:layout_width="@dimen/info_image_size"
        android:layout_height="@dimen/info_image_size"
        android:scaleType="centerCrop"
        android:background="@null"
        android:tint="@color/red"
        android:src="@drawable/info_instagram" />
    
      <ImageButton
        android:layout_width="@dimen/info_image_size"
        android:layout_height="@dimen/info_image_size"
        android:scaleType="centerCrop"
        android:background="@null"
        android:tint="@color/blue"
        android:src="@drawable/info_telegram" />
  
    </LinearLayout>
    
  </LinearLayout>
  
</GridLayout>